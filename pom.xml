<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 https://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <!--阿里源-->
    <repositories>
        <repository>
            <id>alimaven</id>
            <name>aliyun maven</name>
            <url>http://maven.aliyun.com/nexus/content/groups/public/</url>
            <releases>
                <enabled>true</enabled>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
        </repository>
    </repositories>
    <!--父依赖-->
    <parent>
        <groupId>org.springframework.boot</groupId>
        <artifactId>spring-boot-starter-parent</artifactId>
        <version>2.0.3.RELEASE</version>
    </parent>
    <!--项目详情-->
    <groupId>org.humingk</groupId>
    <artifactId>movie</artifactId>
    <version>2.0.11</version>
    <!--父依赖的打包类型为pom(其他默认为jar)-->
    <!--jar:    内部调用,服务-->
    <!--war:    需要部署的项目-->
    <packaging>pom</packaging>
    <name>movie</name>
    <description>douban movie plus</description>
    <!--开发者-->
    <developers>
        <developer>
            <name>humingk</name>
            <email>humingk@gmail.com</email>
            <url>https://github.com/humingk</url>
        </developer>
    </developers>
    <!--子模块(按顺序编译)-->
    <modules>
        <module>movie-dal</module>
        <module>movie-common</module>
        <module>movie-services</module>
        <module>movie-api</module>
        <module>movie-security</module>
        <module>movie-server-config</module>
        <module>movie-server-gateway</module>
        <module>movie-server-auth</module>
        <module>movie-server-eureka</module>
        <module>movie-servers</module>
    </modules>
    <properties>
        <!--公共变量-->
        <base-dir>/home/humingk/git/douban_movie_plus</base-dir>
        <!--版本管理 -->
        <java.version>1.8</java.version>
        <spring-cloud-dependencies.version>Finchley.SR4</spring-cloud-dependencies.version>
        <versions-maven-plugin.version>2.7</versions-maven-plugin.version>
        <mybatis-spring-boot-starter.version>2.0.1</mybatis-spring-boot-starter.version>
        <pagehelper-spring-boot-starter.version>1.2.13</pagehelper-spring-boot-starter.version>
        <mybatis-generator.version>1.3.7</mybatis-generator.version>
        <mysql-connector-java.version>8.0.28</mysql-connector-java.version>
        <lombok.version>1.18.10</lombok.version>
        <fastjson.version>1.2.62</fastjson.version>
        <jwt.version>0.9.1</jwt.version>
        <commons-lang3.version>3.9</commons-lang3.version>
        <commons-pool2.version>2.7.0</commons-pool2.version>
        <apache-httpclient.version>4.5.6</apache-httpclient.version>
        <feign-httpclient.version>8.18.0</feign-httpclient.version>
        <guava.version>28.1-jre</guava.version>
        <zipkin.version>2.11.3</zipkin.version>
        <jsoup.version>1.12.1</jsoup.version>
        <smart-doc-plugin.version>1.0.5</smart-doc-plugin.version>
        <swagger.version>1.9.1.RELEASE</swagger.version>
        <mapstruct.version>1.3.1.Final</mapstruct.version>
    </properties>
    <!--依赖(子模块需要的公共依赖，子模块默认会继承)-->
    <dependencies>
        <!--bus+rabbit-->
        <dependency>
            <groupId>org.springframework.cloud</groupId>
            <artifactId>spring-cloud-starter-bus-amqp</artifactId>
        </dependency>
        <!--lombok-->
        <dependency>
            <groupId>org.projectlombok</groupId>
            <artifactId>lombok</artifactId>
            <scope>compile</scope>
        </dependency>
        <!--测试 -->
        <dependency>
            <groupId>org.springframework.boot</groupId>
            <artifactId>spring-boot-starter-test</artifactId>
            <scope>test</scope>
        </dependency>
    </dependencies>

    <!--依赖管理(主要为工具，大部分为在SpringBoot和SpringCloud版本中没有默认版本的依赖包,子模块需要显式继承)-->
    <dependencyManagement>
        <dependencies>
            <!--spring cloud 版本 (需要在management中声明一下cloud的版本，子模块才能继承cloud中的默认版本集合)-->
            <dependency>
                <groupId>org.springframework.cloud</groupId>
                <artifactId>spring-cloud-dependencies</artifactId>
                <version>${spring-cloud-dependencies.version}</version>
                <type>pom</type>
                <scope>import</scope>
            </dependency>
            <!--movie modules-->
            <!--config-->
            <!--base-->
            <dependency>
                <groupId>org.humingk</groupId>
                <artifactId>movie-api</artifactId>
                <version>2.0.11</version>
            </dependency>
            <dependency>
                <groupId>org.humingk</groupId>
                <artifactId>movie-common</artifactId>
                <version>2.0.11</version>
            </dependency>
            <dependency>
                <groupId>org.humingk</groupId>
                <artifactId>movie-dal</artifactId>
                <version>2.0.11</version>
            </dependency>
            <dependency>
                <groupId>org.humingk</groupId>
                <artifactId>movie-security</artifactId>
                <version>2.0.11</version>
            </dependency>
            <!--service list-->
            <dependency>
                <groupId>org.humingk</groupId>
                <artifactId>movie-service-douban</artifactId>
                <version>2.0.11</version>
            </dependency>
            <dependency>
                <groupId>org.humingk</groupId>
                <artifactId>movie-service-netease</artifactId>
                <version>2.0.11</version>
            </dependency>
            <dependency>
                <groupId>org.humingk</groupId>
                <artifactId>movie-service-user</artifactId>
                <version>2.0.11</version>
            </dependency>
            <dependency>
                <groupId>org.humingk</groupId>
                <artifactId>movie-service-imdb</artifactId>
                <version>2.0.11</version>
            </dependency>
            <dependency>
                <groupId>org.humingk</groupId>
                <artifactId>movie-service-scene</artifactId>
                <version>2.0.11</version>
            </dependency>
            <dependency>
                <groupId>org.humingk</groupId>
                <artifactId>movie-service-zhihu</artifactId>
                <version>2.0.11</version>
            </dependency>
            <dependency>
                <groupId>org.humingk</groupId>
                <artifactId>movie-service-resource</artifactId>
                <version>2.0.11</version>
            </dependency>
            <!--other tools -->
            <!--mybatis-->
            <dependency>
                <groupId>org.mybatis.spring.boot</groupId>
                <artifactId>mybatis-spring-boot-starter</artifactId>
                <version>${mybatis-spring-boot-starter.version}</version>
            </dependency>
            <!--mysql 驱动-->
            <dependency>
                <groupId>mysql</groupId>
                <artifactId>mysql-connector-java</artifactId>
                <scope>runtime</scope>
                <version>${mysql-connector-java.version}</version>
            </dependency>
            <!--jwt 解析-->
            <dependency>
                <groupId>io.jsonwebtoken</groupId>
                <artifactId>jjwt</artifactId>
                <version>${jwt.version}</version>
            </dependency>
            <!--mybatis generator page helper 分页插件-->
            <dependency>
                <groupId>com.github.pagehelper</groupId>
                <artifactId>pagehelper-spring-boot-starter</artifactId>
                <version>${pagehelper-spring-boot-starter.version}</version>
            </dependency>
            <!--lombok工具-->
            <dependency>
                <groupId>org.projectlombok</groupId>
                <artifactId>lombok</artifactId>
                <version>${lombok.version}</version>
                <scope>provided</scope>
            </dependency>
            <!--fastjson-->
            <dependency>
                <groupId>com.alibaba</groupId>
                <artifactId>fastjson</artifactId>
                <version>${fastjson.version}</version>
            </dependency>
            <!--lang3-->
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-lang3</artifactId>
                <version>${commons-lang3.version}</version>
            </dependency>
            <!--pool2-->
            <dependency>
                <groupId>org.apache.commons</groupId>
                <artifactId>commons-pool2</artifactId>
                <version>${commons-pool2.version}</version>
            </dependency>
            <!--apache httpclient-->
            <dependency>
                <groupId>org.apache.httpcomponents</groupId>
                <artifactId>httpclient</artifactId>
                <version>${apache-httpclient.version}</version>
            </dependency>
            <!--feign httpclient-->
            <dependency>
                <groupId>com.netflix.feign</groupId>
                <artifactId>feign-httpclient</artifactId>
                <version>${feign-httpclient.version}</version>
            </dependency>
            <!--google  guava-->
            <dependency>
                <groupId>com.google.guava</groupId>
                <artifactId>guava</artifactId>
                <version>${guava.version}</version>
            </dependency>
            <!--jsoup-->
            <dependency>
                <groupId>org.jsoup</groupId>
                <artifactId>jsoup</artifactId>
                <version>${jsoup.version}</version>
            </dependency>
            <!-- MyBatis Generator -->
            <dependency>
                <groupId>org.mybatis.generator</groupId>
                <artifactId>mybatis-generator-core</artifactId>
                <version>${mybatis-generator.version}</version>
            </dependency>
            <!--mapstruct-->
            <dependency>
                <groupId>org.mapstruct</groupId>
                <artifactId>mapstruct</artifactId>
                <version>${mapstruct.version}</version>
                <scope>compile</scope>
            </dependency>
            <!--mapstruct-processor-->
            <dependency>
                <groupId>org.mapstruct</groupId>
                <artifactId>mapstruct-processor</artifactId>
                <version>${mapstruct.version}</version>
                <scope>compile</scope>
            </dependency>
        </dependencies>
    </dependencyManagement>

    <build>
        <!--插件-->
        <plugins>
            <!--maven version-->
            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>versions-maven-plugin</artifactId>
                <version>${versions-maven-plugin.version}</version>
            </plugin>
            <!-- smart-doc -->
            <plugin>
                <groupId>com.github.shalousun</groupId>
                <artifactId>smart-doc-maven-plugin</artifactId>
                <version>${smart-doc-plugin.version}</version>
                <configuration>
                    <!--配置文件-->
                    <configFile>${base-dir}/doc/api/smart-doc.json</configFile>
                    <!--指定项目名称-->
                    <projectName>豆瓣电影Plus</projectName>
                </configuration>
                <executions>
                    <execution>
                        <goals>
                            <goal>html</goal>
                        </goals>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>
</project>
